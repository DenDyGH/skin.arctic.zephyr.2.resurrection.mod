<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="3">
    <defaultcontrol always="true">20</defaultcontrol>
    <controls>

        <include>Global_Background</include>
        <include>Topbar</include>
        <control type="group">
            <include content="View_Group">
                <param name="animation" value="Defs_Null" />
            </include>
            <control type="group">
                <include>Animation_Left</include>
                <description>Left panel</description>
                <left>0</left>
                <top>0</top>
                <bottom>0</bottom>
                <width>885</width>
                <control type="scrollbar" id="62">
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <centerleft>-50</centerleft>
                    <width>8</width>
                    <top>0</top>
                    <onleft>noop</onleft>
                    <onright>20</onright>
                    <texturesliderbackground colordiffuse="main_fg_12" border="4">common/white.png</texturesliderbackground>
                    <texturesliderbar colordiffuse="main_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
                    <texturesliderbarfocus colordiffuse="main_fg_100" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
                    <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(62) + !Container(20).Scrolling">Conditional</animation>
                    <include>Animation_FadeIn</include>
                    <include>Animation_FadeOut</include>
                </control>
                <control type="label" id="101">
                    <description>Header Label</description>
                    <top>0</top>
                    <left>0</left>
                    <right>170</right>
                    <height>item_list_height</height>
                    <align>left</align>
                    <font>font_small_bold</font>
                    <haspath>true</haspath>
                    <textcolor>main_fg_70</textcolor>
                </control>
                <control type="label" id="12">
                    <description>Header Label</description>
                    <top>0</top>
                    <left>0</left>
                    <right>40</right>
                    <height>item_list_height</height>
                    <align>right</align>
                    <font>font_tiny_bold</font>
                    <textcolor>main_fg_70</textcolor>
                </control>
                <control type="list" id="20">
                    <description>Left File List</description>
                    <left>-20</left>
                    <width>885</width>
                    <top>item_list_height</top>
                    <onleft>62</onleft>
                    <onright>21</onright>
                    <onup>20</onup>
                    <ondown>20</ondown>
                    <pagecontrol>62</pagecontrol>
                    <itemlayout height="item_list_height" width="885">
                        <control type="label">
                            <left>20</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>main_fg_70</textcolor>
                            <info>ListItem.Label</info>
                            <animation effect="slide" start="0" end="54,0" condition="ListItem.IsSelected">Conditional</animation>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>150</width>
                            <align>right</align>
                            <font>font_tiny</font>
                            <textcolor>main_fg_70</textcolor>
                            <info>ListItem.Label2</info>

                        </control>

                        <control type="image">
                            <left>20</left>
                            <centertop>50%</centertop>
                            <width>24</width>
                            <height>24</height>
                            <texture colordiffuse="$VAR[ColorHighlight]">osd/minicheck.png</texture>
                            <visible>ListItem.IsSelected</visible>
                        </control>

                    </itemlayout>

                    <focusedlayout height="item_list_height" width="885">

                        <control type="group">
                            <width>100%</width>
                            <height>100%</height>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
                            <control type="image">
                                <texture colordiffuse="main_fg_100" border="10">diffuse/box.png</texture>
                            </control>
                        </control>

                        <control type="label">
                            <left>20</left>
                            <width>720</width>
                            <align>left</align>
                            <selectedcolor>main_bg_100</selectedcolor>
                            <textcolor>main_bg_100</textcolor>
                            <info>ListItem.Label</info>
                            <animation effect="slide" start="0" end="54,0" condition="ListItem.IsSelected">Conditional</animation>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>720</width>
                            <align>right</align>
                            <selectedcolor>main_bg_100</selectedcolor>
                            <textcolor>main_bg_100</textcolor>
                            <font>font_tiny</font>
                            <info>ListItem.Label2</info>
                            
                        </control>

                        <control type="image">
                            <left>20</left>
                            <centertop>50%</centertop>
                            <width>24</width>
                            <height>24</height>
                            <texture colordiffuse="main_bg_100">osd/minicheck.png</texture>
                            <visible>ListItem.IsSelected</visible>
                        </control>

                    </focusedlayout>
                </control>
            </control>
            <control type="group">
                <right>0</right>
                <top>0</top>
                <width>885</width>
                <bottom>0</bottom>
                <include>Animation_Right</include>
                <control type="scrollbar" id="61">
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <centerright>-50</centerright>
                    <width>8</width>
                    <top>0</top>
                    <onleft>21</onleft>
                    <onright>noop</onright>
                    <texturesliderbackground colordiffuse="main_fg_12" border="4">common/white.png</texturesliderbackground>
                    <texturesliderbar colordiffuse="main_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
                    <texturesliderbarfocus colordiffuse="main_fg_100" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
                    <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(61) + !Container(21).Scrolling">Conditional</animation>
                    <include>Animation_FadeIn</include>
                    <include>Animation_FadeOut</include>
                </control>
                <control type="label" id="102">
                    <description>Header Label</description>
                    <top>0</top>
                    <left>40</left>
                    <right>130</right>
                    <height>item_list_height</height>
                    <align>left</align>
                    <haspath>true</haspath>
                    <font>font_small_bold</font>
                    <textcolor>main_fg_70</textcolor>
                </control>
                <control type="label" id="13">
                    <description>Header Label</description>
                    <top>0</top>
                    <left>0</left>
                    <right>0</right>
                    <height>item_list_height</height>
                    <align>right</align>
                    <font>font_tiny_bold</font>
                    <textcolor>main_fg_70</textcolor>
                </control>

                <control type="list" id="21">
                    <description>Left File List</description>
                    <right>-20</right>
                    <width>885</width>
                    <top>item_list_height</top>
                    <onleft>20</onleft>
                    <onright>61</onright>
                    <onup>21</onup>
                    <ondown>21</ondown>
                    <pagecontrol>61</pagecontrol>
                    <itemlayout height="item_list_height" width="885">
                        <control type="label">
                            <left>20</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>main_fg_70</textcolor>
                            <info>ListItem.Label</info>
                            <animation effect="slide" start="0" end="54,0" condition="ListItem.IsSelected">Conditional</animation>
                        </control>
                        <control type="label">
                            <right>20</right>
                            <width>150</width>
                            <align>right</align>
                            <font>font_tiny</font>
                            <textcolor>main_fg_70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                        <control type="image">
                            <left>20</left>
                            <centertop>50%</centertop>
                            <width>24</width>
                            <height>24</height>
                            <texture colordiffuse="$VAR[ColorHighlight]">osd/minicheck.png</texture>
                            <visible>ListItem.IsSelected</visible>
                        </control>
                    </itemlayout>
                    <focusedlayout height="item_list_height" width="885">
                        <control type="group">
                            <width>100%</width>
                            <height>100%</height>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(21)">Conditional</animation>
                            <control type="image">
                                <texture colordiffuse="main_fg_100" border="10">diffuse/box.png</texture>
                            </control>
                        </control>

                        <control type="label">
                            <left>20</left>
                            <width>720</width>
                            <align>left</align>
                            <selectedcolor>main_bg_100</selectedcolor>
                            <textcolor>main_bg_100</textcolor>
                            <info>ListItem.Label</info>
                            <animation effect="slide" start="0" end="54,0" condition="ListItem.IsSelected">Conditional</animation>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>720</width>
                            <align>right</align>
                            <selectedcolor>main_bg_100</selectedcolor>
                            <textcolor>main_bg_100</textcolor>
                            <font>font_tiny</font>
                            <info>ListItem.Label2</info>
                            
                        </control>

                        <control type="image">
                            <left>20</left>
                            <centertop>50%</centertop>
                            <width>24</width>
                            <height>24</height>
                            <texture colordiffuse="main_bg_100">osd/minicheck.png</texture>
                            <visible>ListItem.IsSelected</visible>
                        </control>
                    </focusedlayout>
                </control>
                    
            </control>
        </control>

    </controls>

</window>
